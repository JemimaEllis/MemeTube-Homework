<h1>Edit Meme</h1>

<%= @meme.title %>

<form action="/meme/<%= @meme.id %>" method="POST">

<label for="title">Title: </label>
<input type="text" name="title" value="<%= @meme.title %>"

<label for="description">Description: </label>
<textarea name="description"><%= @meme.description %></textarea>

<label for="url">URL: </label>
<textarea name="description"><%= @meme.url %></textarea>

<label for="genre">Genre: </label>
<textarea name="genre"><%= @meme.genre %></textarea>

<input type="hidden" name="_method" value="PUT">

<input type="submit" value="update">

</form>
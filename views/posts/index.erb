<h1><%= @page_header %></h1>

<% @posts.each do |post| %>

	<h2>Post Title: <%= post.title %></h2>
	<p><%= post.body %></p>
	<a href="/meme/<%= post.id %>">View</a>
	<h2>Post Body <%= post.body %></h2>
	<a href="/meme/<%= post.id %>/edit">Edit</a>

	<form action="/meme/<%= post.id %>" method="POST">
	<input type="hidden" name="_method" value="DELETE">
	<input type="submit" value="Delete">
	</form>

<% end %>